{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "loschmie/multi-client-v2",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "loschmie/multi-server-v2",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "loschmie/multi-worker-v2",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "loschmie/multi-nginx-v2",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ] 
}